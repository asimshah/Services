{
  "ServiceDbOptions": {
    "DatabaseName": "ServiceDbLive",
    "DatabaseFilename": "ServiceDb.mdf"
  },
  "ServiceOptions": {
    "BackupFolder": "Automated Backups",
    "BackupDriveLabel": "Transcend",
    "EnsureBackupDriveReady": true,
    "FolderSources": [
      {
        "DisplayName": "Popular-Music",
        "Folder": "D:\\Music\\mp3\\Western\\Popular",
        "Type": "ReplicationSource"
      }
    ]
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore.Query": "Error",
      "Microsoft.AspNetCore.NodeServices": "None",
      "Microsoft": "Warning"
    }
  },
  "SchedulerOptions": {
    "TraceTaskPolling": false,
    "Schedules": [ // MUST match the items in AddFastnetServiceTasks()
      {
        "Enabled": true,
        "Name": "BackupService",
        "Schedule": "5-59/15 * * * *" // Every 15 minutes, minutes 5 through 59 past the hour, ie 5, 20, 35, 50 mins
      },
      {
        "Enabled": true,
        "Name": "ReplicationService",
        "Schedule": "11 */8 * * *" // every 8 hrs at 11 minutes past the hour
      },
      {
        "Enabled": true,
        "Name": "InformationService",
        "Schedule": "0 0 * * *" // every day at midnight
      },
      {
        "Enabled": true,
        "Name": "ConfigureBackups",
        "Schedule": "0 * * * *" // every hour
      }
    ]
  }
}
